{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Simple Build",
            "command": "${workspaceFolder}/build.bat",
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Open Debugger",
            "command": "${workspaceFolder}/build/main.sln",
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
    ]
}